program = instruction_list #

instruction_list = instruction_line
		 | instruction_line sep+ instruction_list

instruction_line = instruction? comment?

instruction = instr0
	    | instr1 operand

instr0 = "pop"
       | "dump"
       | "add"
       | "sub"
       | "mul"
       | "div"
       | "mod"
       | "print"
       | "exit"

instr1 = "push"
       | "assert"

operand = int_type LPAREN int_value RPAREN
	| dec_type LPAREN dec_value RPAREN

int_type = "int8" | "int16" | "int32"

dec_type = "float" | "double"

int_value = MINUS? DIGIT+

dec_value = MINUS? DIGIT+ DOT DIGIT*

sep = NEWLINE

comment = SEMICOLON [^NEWLINE]*

# = EOF
